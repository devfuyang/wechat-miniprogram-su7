.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 10px;
  text-align: center;
}

.title-line1, .title-line2 {
  font-family: 'HappyZcool-2016', sans-serif;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  display: block;
}

.title-line2 {
  margin-top: 10px;
}

.qrcode-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10px;
}
.qrcode-container1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}
.qrcode {
  width: 200px;
  height: 200px;
  margin-bottom: 10px;
}

.footer {
  text-align: center;
}

.tip-line1, .tip-line2 {
  font-family: 'HappyZcool-2016', sans-serif;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  display: block;
}

.tip-line2 {
  margin-top: 10px;
}